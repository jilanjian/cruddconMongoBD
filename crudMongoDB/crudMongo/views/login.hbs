<script type="text/javascript">
    let estudiantList = document.createElement('ul')
    
    const myHeaders = new Headers();
    myHeaders.append('estudiant', `Bearer #{estudiant}`)
    
    fetch('/api/estudiant', {
            method: 'GET',
            body: myHeaders
            })
        
        .then(res => res.json())
        .then(data => {
            data.estudiants.map(estudiant => {
                let text = document.createTextNode(estudiant.nombre+ " " + estudiant.apellido+ " "+estudiant.cedula+ " " +estudiant.carrera+" "+estudiant.fecha)
                let elem = document.createElement ('li')
                elem.appendChild(text)
                estudiantList.appendChild(elem)  
            })
                document.body.appendChild(estudiantList)
    })
    
    
    
    </script>
    
    





